<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/index.js">
        <title>Search</title>
    </head>

    <body>
        <form method="post" action="/search">
            <legend>Search by Name</legend>
            <div class="select_book">
                <label for="select-book">Buku: </label>
                <select name="book" id="select-book">
                    <option value="1">Buku 1</option>
                    <option value="2">Buku 2</option>
                    <option value="3">Buku 3</option>
                    <option value="4">Buku 4</option>
                    <option value="5">Buku 5</option>
                </select>
            </div>
            <input type="text" name="search">
            <input type="submit" value="Cari">
        </form>
        <div class="show-table">
            <%- include('./layout/pagination.ejs') %>
            <!--Pagination belum dapat digunakan-->
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Source</th>
                        <th>Target</th>
                        <th>Weight</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(const row of results) { %>
                        <tr>
                            <td><%= row.source %></td>
                            <td><%= row.target %></td>
                            <td><%= row.weight %></td>
                        </tr> 
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
