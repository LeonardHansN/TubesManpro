<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/index.js"> -->
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="/css/navigationheader.css">
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>

    <title>Search</title>
</head>

<body>
    
    <%- include('./navigationheader.ejs') %>
    <div class="wrapper">
        <form action="/search/1">
            <legend>Search by Name</legend>
            <div class="select_book">
                <label for="select-book">Buku: </label>
                <select name="book" id="select-book">
                    <% for( const row of numBooks ) { %>
                        <option value="<%= row.book %>" <%=(numBook==row.book)?"selected":"" %>>Book <%= row.book %>
                        </option>
                        <% } %>
                </select>
            </div>
            <input type="text" name="source" value="<%= source %>">
            <input type="submit" value="Cari">
        </form>
        <div class="show-table">
            <%- include("./layout/pagination") %>
                <!--Pagination belum dapat digunakan-->
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Source</th>
                            <th>Target</th>
                            <th>Weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(const row of results) { %>
                            <tr>
                                <td>
                                    <%= row.source %>
                                </td>
                                <td>
                                    <%= row.target %>
                                </td>
                                <td>
                                    <%= row.weight %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
        </div>
    </div>
</body>

</html>